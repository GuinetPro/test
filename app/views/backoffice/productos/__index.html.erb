<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Editor Masivo
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Editor masivo</h4>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <label for="aseguradora_id">Aseguradora</label>

              <select id="aseguradora_id"  class="form-control">
                  <option value=""></option>
                   <%= @aseguradoras.each do |p| %>              
                      <option value="<%= p.id%>"><%= p.nombre%></option>
                   <% end %>
              </select>
        </div>


        <div class="form-group">
          <label for="campana_id">Campa√±a</label>
          <select id="campana_id"  class="form-control">
              <option value=""></option>
             <%= @campanas.each do |p| %>
                <option value="<%= p.id%>"><%= p.nombre%></option>
             <% end %>
          </select>
        </div>

        <div class="form-group">
          <label for="tipovehiculo_id">Tipo Vehiculo</label>
          <select id="tipovehiculo_id"  class="form-control">
              <option value=""></option>
             <%= @tipovehiculo.each do |p| %>
                <option value="<%= p.id%>"><%= p.nombre%></option>
             <% end %>
          </select>
        </div>



        <div class="rows">
          <div class="col-md-6">
            <div class="form-group">
              <label for="url_compra">URL Compra</label>
              <input type="text" name="url_compra" id="url_compra" class="form-control">
            </div>           
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="url_poliza">URL Poliza</label>
              <input type="text" name="url_poliza" id="url_poliza" class="form-control">
            </div>            
          </div>
        </div>
          
    
        <div class="rows">
          <div class="col-md-6">
            <div class="form-group">
              <label for="precio">Precio</label>
              <input type="text" name="precio" id="precio" class="form-control">
            </div>           
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="destacado_id">Destacado</label>
              <select name="destacado_id" id="destacado_id" class="form-control" disabled>
                  <option value=""></option>
                  <%= @destacados.each do |p| %>
                      <option value="<%= p.id%>"><%= p.nombre%></option>
                  <% end %>               
              </select>
            </div>            
          </div>
        </div>   


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" onclick ="editorMasivo()">Guardar</button>
      </div>  ...

    </div>
  </div>
</div>

