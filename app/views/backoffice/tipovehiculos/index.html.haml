%p.alert.alert-success{:role => "alert", :style => "#{"display:none;" if notice.nil?}"}= notice
%p.alert.alert-danger{:role => "alert", :style => "#{"display:none;" if alert.nil?}"}= alert
%h1 Lista de Tipo Vehiculos
- if current_usuario.perfil == "admin"
  = link_to "Nueva Tipo Vehiculos" , new_backoffice_tipovehiculo_path , :class => "btn btn-success"
%table.table
  %thead
    %tr
      %th id
      %th Nombre
      %th{:colspan => "3"}
  %tbody
    - @tipovehiculos.each do |tipovehiculo|
      %tr
        %td= tipovehiculo.id
        %td= tipovehiculo.nombre
        - if current_usuario.perfil == "admin"
          %td= link_to 'Edit', edit_backoffice_tipovehiculo_path(tipovehiculo)
          %td= link_to 'Eliminar', backoffice_tipovehiculo_path(tipovehiculo), method: :delete, data: { confirm: 'Realmente deseas eliminar este dato?' }
        - if current_usuario.perfil == "editor"
          %td= link_to 'Edit', edit_backoffice_tipovehiculo_path(tipovehiculo)
= paginate @tipovehiculos, :theme => 'twitter-bootstrap-3'
%br/
