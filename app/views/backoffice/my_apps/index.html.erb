<%= link_to "Nueva CampaÃ±a" , new_backoffice_my_app_path , :class => "btn btn-success"%>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>App ID</th>
      <th>Javascript origins</th>
      <th>Secret key</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_apps.each do |my_app| %>
      <tr>
        <td><%= my_app.titulo %></td>
        <td><%= my_app.app_id %></td>
        <td><%= my_app.javascript_origins %></td>
        <td><%= my_app.secret_key %></td>
        <% if current_usuario.perfil == "admin"  %>
          <td><%= link_to 'Edit', edit_backoffice_my_app_path(my_app) %></td>
          <td><%= link_to 'Eliminar', backoffice_my_app_path(my_app), method: :delete, data: { confirm: 'Realmente deseas eliminar este dato?' } %></td>
        <% end %>
        <% if current_usuario.perfil == "editor"  %>
            <td><%= link_to 'Edit', edit_backoffice_my_app_path(my_app) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @my_apps, :theme => 'twitter-bootstrap-3'%>
