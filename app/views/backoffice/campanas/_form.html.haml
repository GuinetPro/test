= form_for ["backoffice",@campana] do |f|
  - if @campana.errors.any?
    .alert.alert-warning
      %h2
        = pluralize(@campana.errors.count, "error")
        Al Intentar Guardar Campa√±a:
      %ul
        - @campana.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :nombre
    %br/
    = f.text_field :nombre ,class: "form-control"
  .form-group
    = f.submit "Guardar" ,class: "btn btn-success btn-lg btn-block"
